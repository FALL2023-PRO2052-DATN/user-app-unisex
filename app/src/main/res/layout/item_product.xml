<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_img_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/demo_product"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sales"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_number_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="20%"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="ONTOP TEE OPTICS"
            android:textColor="@color/text1"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_price_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="295.999Ä‘"
            android:textColor="@color/primary"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tv_name_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_product" />

        <TextView
            android:id="@+id/tv_type_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="Unisex - Aothun"
            android:textColor="@color/primary"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_price_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_product" />

        <TextView
            android:id="@+id/tv_price_sales_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_sales"
            android:textColor="@color/text3"
            android:textSize="13sp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginStart="47dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_product"
            app:layout_constraintStart_toEndOf="@+id/tv_price_product"
            app:layout_constraintTop_toTopOf="@+id/tv_price_product"
            android:strikethrough="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>