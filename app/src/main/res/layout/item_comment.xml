<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:src="@drawable/avt_feddback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/text_name_feedback"
        android:textColor="@color/primary"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_comment"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rating_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-41dp"
        android:layout_marginTop="-18dp"
        android:layout_weight="1"
        android:minHeight="10dp"
        android:numStars="5"
        android:padding="0dp"
        android:progressTint="@color/primary"
        android:rating="4.5"
        android:scaleX="0.33"
        android:scaleY="0.33"
        android:stepSize="0.5"
        android:contentDescription="@string/content_product_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_comment" />

    <TextView
        android:id="@+id/tv_checkin_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/text_checkin_feedback"
        android:textColor="@color/text3"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_comment" />

    <TextView
        android:id="@+id/tv_content_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/text_content_feedback"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkin_feedback" />

    <TextView
        android:id="@+id/tv_datetime_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/text_datetime_feedback"
        android:textColor="@color/text2"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_comment" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:src="@drawable/line_item_add_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_datetime_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>