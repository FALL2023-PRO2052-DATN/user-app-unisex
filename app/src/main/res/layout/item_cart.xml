<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/demo_img_cart"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/line_item_add_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_product_cart"/>

    <ImageView
        android:id="@+id/iv_tick_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tick_fill"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product_cart"
        app:layout_constraintEnd_toStartOf="@+id/iv_product_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_product_cart" />

    <TextView
        android:id="@+id/tv_name_product_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="@string/text_name_product"
        android:textColor="@color/text1"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_product_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_size_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/text_size_cart"
        android:textColor="@color/text2"
        android:textSize="15sp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_product_cart"
        app:layout_constraintTop_toTopOf="@+id/iv_product_cart" />

    <TextView
        android:id="@+id/tv_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="@string/number_price"
        android:textColor="@color/primary"
        android:textSize="19sp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/tv_size_cart"
        app:layout_constraintTop_toTopOf="@+id/iv_product_cart" />

    <TextView
        android:id="@+id/tv_price_sales_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/price_sales"
        android:textColor="@color/text3"
        android:textSize="15sp"
        android:layout_marginTop="79dp"
        app:layout_constraintStart_toStartOf="@+id/tv_price_cart"
        app:layout_constraintTop_toTopOf="@+id/iv_product_cart" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/line_add_minus_quatity"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="@+id/tv_price_sales_cart"
        app:layout_constraintTop_toTopOf="@+id/iv_product_cart">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7">

            <ImageView
                android:id="@+id/iV_minus_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_minus_quatity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_marginStart="31dp"
                android:background="@color/text4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tV_quatity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="2"
                android:textColor="@color/primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_marginStart="68dp"
                android:background="@color/text4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:src="@drawable/ic_add_quantity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_clear_product_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/clear_product_cart"
        android:textColor="@color/primary"
        android:textSize="13sp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>