<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_img_product"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_product_comment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/demo_item_other" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_name_product_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="@string/text_name_product"
        android:textColor="@color/text1"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/layoutImg"
        app:layout_constraintTop_toTopOf="@+id/layoutImg" />

    <TextView
        android:id="@+id/tv_size_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="@string/text_size_cart"
        android:textColor="@color/text2"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_product_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_product_comment" />

</androidx.constraintlayout.widget.ConstraintLayout>